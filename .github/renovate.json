{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "prHourlyLimit": 0,
  "ignorePaths": [],
  "labels": ["dependencies", "bot"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "rangeStrategy": "bump"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3
}
