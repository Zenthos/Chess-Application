{
  "automerge": true,
  "automergeType": "pr",
  "enabledManagers": [
    "yarn"
  ],
  "major": {
    "automerge": false
  },
  "labels": [
    "dependencies",
    "bot"
  ],
  "extends": [
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchPaths": [
        "client/package.json"
      ],
      "enabled": true
    },
    {
      "matchPaths": [
        "server/package.json"
      ],
      "enabled": true
    },
    {
      "matchPaths": [
        "testing/package.json"
      ],
      "enabled": false
    },
    {
      "packageNames": [
        "node",
        "npm",
        "yarn"
      ],
      "enabled": false
    }
  ]
}
