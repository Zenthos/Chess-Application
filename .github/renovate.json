{
  "automerge": true,
  "automergeType": "pr",
  "enabledManagers": ["yarn"],
  "labels": ["dependencies", "bot"],
  "schedule": ["before 2am"],
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPaths": ["client/package.json"],
      "enabled": true
    },
    {
      "matchPaths": ["server/package.json"],
      "enabled": true
    },
    {
      "matchPaths": ["testing/package.json"],
      "enabled": false
    },
    {
      "packageNames": ["node", "npm"],
      "enabled": false
    }
  ]
}
